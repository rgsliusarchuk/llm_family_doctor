{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI Server (Local)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api_server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "TOKENIZERS_PARALLELISM": "false"
            },
            "args": [],
            "python": ["python", "-Xfrozen_modules=off"],
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug with Uvicorn (Local)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api_server:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "TOKENIZERS_PARALLELISM": "false"
            },
            "python": ["python", "-Xfrozen_modules=off"],
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug Intent Classifier (Local)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug_intent.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "TOKENIZERS_PARALLELISM": "false"
            },
            "args": [],
            "python": ["python", "-Xfrozen_modules=off"],
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug Docker Container",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
} 